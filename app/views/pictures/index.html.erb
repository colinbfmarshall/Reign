<p id="notice"><%= notice %></p>
  <div class="container">
    <div class="row">
    <h1>Pictures</h1>
      <% @pictures.each do |picture| %>
          <div class="col-lg-3 col-md-2">
            
          <%= link_to picture_path(picture) do %>

            <div class="panel">
              <div class="panel-body centered" style="height:400px;background:url(<%= picture.image %>) no-repeat;background-size:cover;border-radius: 2px">
                <% if current_user == picture.user %>
                <%= link_to 'Edit', edit_picture_path(picture), class:"btn btn-default"  %>
                <%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-default"  %>
                <% end %>
              </div>
            </div>
            <% end %>
          </div>
      <% end %>
    </div>
    <div class="row">
     <hr>
      <div class="col-lg-12 centered">
        <%= link_to 'New Picture', new_picture_path, class:"btn btn-default btn-lg" %>
      </div>
    </div>
  </div>
