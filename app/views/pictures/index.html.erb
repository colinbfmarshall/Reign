<p id="notice"><%= notice %></p>
  <div class="container">
    <div class="row centered">
     <div class="col-md-4 col-md-offset-4">
      <h1>Picture Search</h1>
      <%= form_tag pictures_path, :method => :get, :html => {:class => "form-inline"} do %>
          <div class="form-group">
            <%= text_field_tag :celeb_name, params[:celeb_name], class:"form-control", placeholder:"Who?" %>
          </div>
        </div>
     <% end %>
    </div>
    <div class="row" >
      <div class="col-md-4 col-md-offset-4">
        <div class="centered">
          <button type="button" class="btn btn-default" id="search_button">Most Popular</button>
          <button type="button" class="btn btn-default" id="search_button">Newest</button>
          <button type="button" class="btn btn-default" id="search_button">Random</button>
        </div>

      </div>
      <div class="col-md-4">
        <%= link_to 'Upload Picture', new_picture_path, class:"btn btn-default pull-right" %>
      </div>
    </div>
    <div class="row">
    <hr>
      <% @pictures.each do |picture| %>
        <%= render partial: 'picture_panel', locals: {picture: picture} %>
      <% end %>
    
    </div>
    <div class="row">
     <hr>
      <div class="col-lg-12 centered">
        
      </div>
    </div>
  </div>
