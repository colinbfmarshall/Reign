<%= simple_form_for(@picture) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :celebrity %>
    <%= f.input :location %>
    <%= f.input :time, as: :date, start_year: Date.today.year - 100, end_year: Date.today.year, discard_day: true, order: [:month, :year] %>
    <%= f.input :comment %>
    <%= f.input :image, as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
