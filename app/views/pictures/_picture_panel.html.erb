<div class="col-lg-4 col-md-6">
  <%= link_to picture_path(picture) do %>
  <div class="panel" style="box-shadow: 4px 4px 2px #888888;">
    <div class="panel-body centered" style="height:400px;background:url(<%= picture.image %>) no-repeat;background-size:cover;background-position:center;border-radius: 2px" id="picture_panel">
      <% if current_user == picture.user %>
      <%= link_to 'Edit', edit_picture_path(picture), class:"btn btn-default"  %>
      <%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-default"  %>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
